{% extends 'base.html.twig' %}

{% block titlePage %}Département : {{ department.name }}{% endblock %}

{% block body %}
<a href="{{ path('backend_department_list') }}">Retour à la liste</a>

<div class="card">
  <div class="card-header">
    Liste des projets
  </div>
  <div class="card-body">
  <ul>
{% for project in department.projects if department.projects %}
    <li><a href="{{ path('backend_project_show', { id : project.id }) }}">{{ project.name }}</a></li>
    {% else %}
    <li>Aucun projet</li>
{% endfor %}
  </ul>
  </div>
</div>

<div class="card">
  <div class="card-header">
    Liste des prestataires
  </div>
  <div class="card-body">
  <ul>
  {% for provider in department.providers if department.providers %}
      <li><a href="{{ path('backend_provider_show', { id : provider.id }) }}">{{ provider.name }}</a></li>
  {% else %}
      <li>Aucun prestataire</li>
  {% endfor %}
  </ul>

  </div>
</div>

<a href="{{ path('backend_department_delete', { id : department.id} ) }}" class="btn btn-danger">Supprimer</a> <a href="{{ path('backend_department_edit', { id : department.id} ) }}" class="btn btn-dark">Modifier</a> 
{% endblock %}